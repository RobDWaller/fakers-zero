{
    "name": "rbdwllr/fakers-zero",
    "description": "Rebuild of the original Fakers App released in 2012.",
    "type": "project",
    "require": {
        "php": ">=7.3.0",
        "slim/slim": "^4.0",
        "slim/psr7": "^0.5",
        "doctrine/orm": "^2.6",
        "rbdwllr/psr-jwt": "^0.2",
        "twig/twig": "^2.11",
        "php-di/php-di": "^6.0",
        "nesbot/carbon": "^2.0",
        "abraham/twitteroauth": "^1.0",
        "vlucas/phpdotenv": "^3.6",
        "bryanjhv/slim-session": "^4.0",
        "sabre/uri": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "phpstan/phpstan": "^0.11.15",
        "phpmd/phpmd": "^2.7",
        "squizlabs/php_codesniffer": "^3.4",
        "fzaninotto/faker": "^1.8",
        "sebastian/phpcpd": "^4.0",
        "phploc/phploc": "^5.0",
        "infection/infection": "^0.14"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "RobDWaller",
            "email": "rdwaller1984@googlemail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Tests\\": "tests"
        }
    },
    "scripts" : {
        "pipeline": [
            "vendor/bin/phpcs --standard=psr12 src tests",
            "vendor/bin/phpstan analyse -l 7 src tests",
            "vendor/bin/phpmd src text ruleset.xml",
            "vendor/bin/phpunit --coverage-clover=coverage.xml",
            "vendor/bin/infection -s --min-msi=90",
            "vendor/bin/phpcpd --min-lines=2 --min-tokens=35 src",
            "vendor/bin/phploc src"
        ]
    }
}
